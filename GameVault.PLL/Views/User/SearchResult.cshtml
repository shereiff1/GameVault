@model List<UserPublicInfo>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Search Results";
    var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
}

<div class="col-xl-12 mb-5 mb-xl-10">
    <!--begin::Tables widget 16-->
    <div class="card card-flush h-xl-100">
        <!--begin::Header-->
        <div class="card-header pt-5">
            <!--begin::Title-->
            <h3 class="card-title align-items-start flex-column">
                <span class="card-label fw-bold text-gray-800">Search Results</span>
                <span class="text-gray-500 mt-1 fw-semibold fs-6">Users that match your search criteria</span>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <div class="text-muted fs-7 mt-2">
                        Searched for: "<strong>@ViewBag.SearchTerm</strong>" - Found @ViewBag.ResultCount result(s)
                    </div>
                }
            </h3>
            <!--end::Title-->
            <!--begin::Toolbar-->
            <div class="card-toolbar">
                <!--begin::Back to Search button-->
                <a href="@Url.Action("Index", "User")" class="btn btn-sm btn-light me-2">
                    <i class="ki-duotone ki-arrow-left fs-3">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    Back to Search
                </a>
                <!--end::Back to Search button-->
                <!--begin::Menu-->
                <button class="btn btn-icon btn-color-gray-500 btn-active-color-primary justify-content-end"
                        data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-overflow="true">
                    <i class="ki-duotone ki-dots-square fs-1 text-gray-500 me-n1">
                        <span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span>
                    </i>
                </button>

                <!--begin::Menu 2-->
                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px" data-kt-menu="true">
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <div class="menu-content fs-6 text-gray-900 fw-bold px-3 py-4">Quick Actions</div>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu separator-->
                    <div class="separator mb-3 opacity-75"></div>
                    <!--end::Menu separator-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a class="menu-link px-3" href="@Url.Action("Index", "User")">
                            <i class="ki-duotone ki-magnifier fs-2 me-2">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>
                            New Search
                        </a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu separator-->
                    <div class="separator mt-3 opacity-75"></div>
                    <!--end::Menu separator-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <div class="menu-content px-3 py-3">
                            <a class="btn btn-primary btn-sm px-4" href="@Url.Action("AddUser", "User")">
                                Add New User
                            </a>
                        </div>
                    </div>
                    <!--end::Menu item-->
                </div>
                <!--end::Menu 2-->
                <!--end::Menu-->
            </div>
            <!--end::Toolbar-->
        </div>
        <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body pt-6">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <!--begin::Alert-->
                <div class="alert alert-danger d-flex align-items-center p-5 mb-5">
                    <i class="ki-duotone ki-shield-cross fs-2hx text-danger me-4">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                    </i>
                    <div class="d-flex flex-column">
                        <h4 class="mb-1 text-danger">Error</h4>
                        <span>@ViewBag.ErrorMessage</span>
                    </div>
                </div>
                <!--end::Alert-->
            }

            @if (Model != null && Model.Any())
            {
                <!--begin::Summary info-->
                <div class="d-flex align-items-center justify-content-between mb-5">
                    <div class="text-gray-600 fw-semibold fs-7">
                        Showing @Model.Count user(s) matching your search
                    </div>
                </div>
                <!--end::Summary info-->
                <!--begin::Table container-->
                <div class="table-responsive">
                    <!--begin::Table-->
                    <table class="table table-row-dashed align-middle gs-0 gy-3 my-0">
                        <!--begin::Table head-->
                        <thead>
                            <tr class="fs-7 fw-bold text-gray-500 border-bottom-0">
                                <th class="p-0 pb-3 min-w-200px text-start">User</th>
                                <th class="p-0 pb-3 min-w-150px text-start">Full Name</th>
                                <th class="p-0 pb-3 min-w-150px text-start">Status</th>
                                <th class="p-0 pb-3 w-100px text-end">Actions</th>
                            </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-50px me-3">
                                                @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                                {
                                                    <img src="@(!string.IsNullOrEmpty(user?.ProfilePicture) ? Url.Content("~/Images/" + user.ProfilePicture) : "https://i.ibb.co/bjgY27pk/Blank-Profile-Pic.jpg")" class="w-100" alt="@user.UserName" />
                                                }
                                                else
                                                {
                                                    <div class="symbol-label bg-light-primary">
                                                        <span class="text-primary fw-bold fs-4">@user.UserName?.Substring(0, 1).ToUpper()</span>
                                                    </div>
                                                }
                                            </div>
                                            <div class="d-flex justify-content-start flex-column">
                                                <span class="text-gray-800 fw-bold mb-1 fs-6">@user.UserName</span>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(user.Name))
                                        {
                                            <span class="text-gray-600 fw-semibold fs-7">@user.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fs-7">No name provided</span>
                                        }
                                    </td>

                                    <td class="text-start">
                                        <span class="badge badge-light-success fs-8">Active</span>
                                    </td>

                                    <td class="text-end">
                                        <div class="d-flex justify-content-end flex-shrink-0">
                                            <a asp-controller="User" asp-action="UserProfile"
                                               asp-route-id="@user.Id"
                                               class="btn btn-sm btn-primary"
                                               data-bs-toggle="tooltip" title="View User Profile">
                                                <i class="ki-duotone ki-eye fs-3">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                    <span class="path3"></span>
                                                </i>
                                                View Profile
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Table container-->
            }
            else
            {
                <!--begin::Empty state-->
                <div class="text-center py-10">
                    <div class="mb-7">
                        <i class="ki-duotone ki-magnifier fs-5x text-gray-400">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                    </div>
                    <div class="fw-semibold fs-1 text-gray-400 mb-7">No users found</div>
                    <div class="fw-semibold fs-6 text-gray-600 mb-5">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <text>No users match your search criteria for "@ViewBag.SearchTerm".<br />Try a different search term.</text>
                        }
                        else
                        {
                            <text>No search results to display.</text>
                        }
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("Index", "User")" class="btn btn-light">
                            <i class="ki-duotone ki-magnifier fs-2">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>
                            Try New Search
                        </a>

                    </div>
                </div>
                <!--end::Empty state-->
            }
        </div>
        <!--end: Card Body-->
    </div>
    <!--end::Tables widget 16-->
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        $('[data-bs-toggle="tooltip"]').tooltip();

        // Optional: Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}