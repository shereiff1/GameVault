<!--begin::Navbar-->
<div class="card mb-5 mb-xl-10">
    <div class="card-body pt-9 pb-0">
        <!--begin::Details-->
        <div class="d-flex flex-wrap flex-sm-nowrap">
            <!--begin: Pic-->
            <div class="me-7 mb-4">
                <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                    <img src="@(!string.IsNullOrEmpty(Model?.ProfilePicture) ? Url.Content("~/Images/" + Model.ProfilePicture) : "https://i.ibb.co/bjgY27pk/Blank-Profile-Pic.jpg")" alt="Profile Picture">
                    <div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-body h-20px w-20px"></div>
                </div>
            </div>
            <!--end::Pic-->
            <!--begin::Info-->
            <div class="flex-grow-1">
                <!--begin::Title-->
                <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                    <!--begin::User-->
                    <div class="d-flex flex-column">

                        <!--begin::Info-->
                        <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                            <a href="#" class="d-flex align-items-center text-gray-500 text-hover-primary me-5 mb-2">
                                <i class="ki-duotone ki-profile-circle fs-4 me-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                @Model?.UserName
                            </a>
                        </div>
                        <!--end::Info-->
                    </div>
                    <!--end::User-->
                </div>
                <!--end::Title-->
            </div>
            <!--end::Info-->
        </div>
        <!--end::Details-->
        <!--begin::Navs-->
        <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
            <!--begin::Nav item-->
            <li class="nav-item mt-2">
                <a class="nav-link text-active-primary ms-0 me-10 py-5 @(string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "PrivateProfile", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                   asp-action="PrivateProfile"
                   asp-controller="User"
                   asp-route-id="@Model.Id">
                    Overview
                </a>
            </li>
            <!--end::Nav item-->
            <!--begin::Nav item-->
            <li class="nav-item mt-2">
                <a class="nav-link text-active-primary ms-0 me-10 py-5 @(string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "UpdateProfile", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                   asp-action="UpdateProfile"
                   asp-controller="User">
                    Edit Profile
                </a>
            </li>
            <!--end::Nav item-->
            <!--begin::Nav item-->
            <li class="nav-item mt-2">
                <a class="nav-link text-active-primary ms-0 me-10 py-5 @(string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "UpdateProfile", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                   asp-action="UserLibrary"
                   asp-controller="User">
                    Library
                </a>
            </li>
            <!--end::Nav item-->
        </ul>
        <!--begin::Navs-->
    </div>
</div>
<!--end::Navbar-->