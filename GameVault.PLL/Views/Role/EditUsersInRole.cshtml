@model List<UserRoleVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Users in Role";
}

<div class="col-xl-12 mb-5 mb-xl-10">
    <!--begin::Tables widget 16-->
    <div class="card card-flush h-xl-100">
        <!--begin::Header-->
        <div class="card-header pt-5">
            <!--begin::Title-->
            <h3 class="card-title align-items-start flex-column">
                <span class="card-label fw-bold text-gray-800">Edit Users in Role: @ViewBag.RoleName</span>
                <span class="text-gray-500 mt-1 fw-semibold fs-6">Manage role assignments for users</span>
            </h3>
            <!--end::Title-->
            <!--begin::Toolbar-->
            <div class="card-toolbar">
                <a href="@Url.Action("RolesList", "Role")" class="btn btn-primary btn-sm px-4">
                    Back to Roles
                </a>
            </div>
            <!--end::Toolbar-->
        </div>
        <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body pt-6">
            <form method="post" asp-action="EditUsersInRole" asp-controller="Role">
                <input type="hidden" name="roleId" value="@ViewBag.RoleId" />

                <!--begin::Table container-->
                <div class="table-responsive">
                    <!--begin::Table-->
                    <table class="table table-row-dashed align-middle gs-0 gy-3 my-0">
                        <!--begin::Table head-->
                        <thead>
                            <tr class="fs-7 fw-bold text-gray-500 border-bottom-0">
                                <th class="p-0 pb-3 min-w-50px text-start">
                                    <input type="checkbox" id="selectAll" class="form-check-input" />
                                </th>
                                <th class="p-0 pb-3 min-w-200px text-start">USER</th>
                                <th class="p-0 pb-3 min-w-150px text-start">ADDED ON</th>
                                <th class="p-0 pb-3 w-100px text-center">STATUS</th>
                            </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Html.CheckBoxFor(m => m[i].IsSelected, new { @class = "form-check-input user-checkbox" })
                                        @Html.HiddenFor(m => m[i].UserId)
                                        @Html.HiddenFor(m => m[i].UserName)
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-50px me-3">
                                                @if (!string.IsNullOrEmpty(Model[i].ProfilePicture))
                                                {
                                                    <img src="@(!string.IsNullOrEmpty(Model[i]?.ProfilePicture) ? Url.Content("~/Images/" + Model[i].ProfilePicture) : "https://i.ibb.co/bjgY27pk/Blank-Profile-Pic.jpg")" class="w-100" alt="@Model[i].UserName" />
                                                }
                                                else
                                                {
                                                    <div class="symbol-label bg-light-primary">
                                                        <span class="text-primary fw-bold fs-4">@Model[i].UserName?.Substring(0, 1).ToUpper()</span>
                                                    </div>
                                                }
                                            </div>
                                            <div class="d-flex justify-content-start flex-column">
                                                <span class="text-gray-800 fw-bold mb-1 fs-6">@Model[i].UserName</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-gray-600 fw-semibold fs-6">
                                            @(Model[i].CreatedOn?.ToString("MMM dd, yyyy") ?? "N/A")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (Model[i].IsSelected)
                                        {
                                            <span class="badge badge-light-success">Assigned</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-light-secondary">Not Assigned</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Table container-->
                <!--begin::Actions-->
                <div class="d-flex justify-content-end mt-5">
                    <button type="submit" class="btn btn-primary me-3">
                        Update Role Assignments
                    </button>
                    <a href="@Url.Action("RolesList", "Role")" class="btn btn-dark">
                        Cancel
                    </a>
                </div>
                <!--end::Actions-->
            </form>
        </div>
        <!--end: Card Body-->
    </div>
    <!--end::Tables widget 16-->
</div>


