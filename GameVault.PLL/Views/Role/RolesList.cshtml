@model List<RoleVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "All Roles";
}

<div class="col-xl-12 mb-5 mb-xl-10">
    <!--begin::Tables widget 16-->
    <div class="card card-flush h-xl-100">
        <!--begin::Header-->
        <div class="card-header pt-5">
            <!--begin::Title-->
            <h3 class="card-title align-items-start flex-column">
                <span class="card-label fw-bold text-gray-800">System Roles</span>
                <span class="text-gray-500 mt-1 fw-semibold fs-6">Manage application roles and permissions</span>
            </h3>
            <!--end::Title-->
            <!--begin::Toolbar-->
            <div class="card-toolbar">
                <!--begin::Menu-->
                <button class="btn btn-icon btn-color-gray-500 btn-active-color-primary justify-content-end"
                        data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-overflow="true">
                    <i class="ki-duotone ki-dots-square fs-1 text-gray-500 me-n1">
                        <span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span>
                    </i>
                </button>

                <!--begin::Menu 2-->
                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px" data-kt-menu="true">
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <div class="menu-content fs-6 text-gray-900 fw-bold px-3 py-4">Quick Actions</div>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu separator-->
                    <div class="separator mb-3 opacity-75"></div>
                    <!--end::Menu separator-->  
                    <!--begin::Menu separator-->
                    <div class="separator mt-3 opacity-75"></div>
                    <!--end::Menu separator-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <div class="menu-content px-3 py-3">
                            <a class="btn btn-primary btn-sm px-4" href="@Url.Action("CreateRole", "Role")">
                                Create New Role
                            </a>
                        </div>
                    </div>
                    <!--end::Menu item-->
                </div>
                <!--end::Menu 2-->
                <!--end::Menu-->
            </div>
            <!--end::Toolbar-->
        </div>
        <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body pt-6">
            @if (Model.Any())
            {
                <!--begin::Table container-->
                <div class="table-responsive">
                    <!--begin::Table-->
                    <table class="table table-row-dashed align-middle gs-0 gy-3 my-0">
                        <!--begin::Table head-->
                        <thead>
                            <tr class="fs-7 fw-bold text-gray-500 border-bottom-0">
                                <th class="p-0 pb-3 min-w-200px text-start">ROLE NAME</th>
                                <th class="p-0 pb-3 min-w-150px text-start">Created By</th>
                                <th class="p-0 pb-3 min-w-150px text-start">Created On</th>
                                <th class="p-0 pb-3 w-125px text-center">STATUS</th>
                                <th class="p-0 pb-3 w-100px text-end">ACTIONS</th>
                            </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-50px me-3">
                                                <div class="symbol-label bg-light-primary">
                                                    <i class="ki-duotone ki-shield-tick fs-2x text-primary">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-start flex-column">
                                                <span class="text-gray-800 fw-bold mb-1 fs-6">@role.Name</span>
                                                <span class="text-gray-500 fw-semibold d-block fs-7">System Role</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(role.CreatedBy))
                                        {
                                            <span class="text-gray-600 fw-semibold fs-7">@role.CreatedBy</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(role.CreatedBy))
                                        {
                                            <span class="text-gray-600 fw-semibold fs-7">@role.CreatedOn</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-light-success">Active</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end flex-shrink-0">
                                            <a asp-controller="Role" asp-action="EditUsersInRole"
                                               asp-route-id="@role.Id"
                                               class="btn  btn-sm btn-primary btn-sm me-1"
                                               data-bs-toggle="tooltip" title="Edit Users in Role">
                                                <i class="ki-duotone ki-pencil fs-3">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                                Edit
                                            </a>
                                          
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Table container-->
            }
            else
            {
                <!--begin::Empty state-->
                <div class="text-center py-10">
                    <div class="mb-7">
                        <i class="ki-duotone ki-shield-cross fs-5x text-gray-400">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                    </div>
                    <div class="fw-semibold fs-1 text-gray-400 mb-7">No roles found</div>
                    <div class="fw-semibold fs-6 text-gray-600 mb-5">
                        No roles have been created yet. Create your first role to get started.
                    </div>
                    <a href="@Url.Action("CreateRole", "Role")" class="btn btn-primary">
                        <i class="ki-duotone ki-plus fs-2"></i>
                        Create First Role
                    </a>
                </div>
                <!--end::Empty state-->
            }
        </div>
        <!--end: Card Body-->
    </div>
    <!--end::Tables widget 16-->
</div>

