        e.preventDefault();
        try {
             let id=   this.getAttribute('data-id')
             console.log(id)
            const response = await fetch('http:localhost:44341/Category/Delete', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    Category_Id:id
                })
            });
            if (response.ok)
         $( document ).ready(function() {
