@model List<GameVault.BLL.ModelVM.Category.CategoryDTO>

@{
    ViewData["Title"] = "Categories";
}

<h2>Category List</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<div class="mb-3">
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Add New Category</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No categories found.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>Created By</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.Category_Name</td>
                    <td>@cat.Description</td>
                    <td>@cat.CreatedBy</td>
                    <td>
                        <a asp-action="UpdateCategory" asp-route-id="@cat.Category_Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@cat.Category_Id"class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

