@model GameVault.BLL.ModelVM.Account.UserLogin

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Log In";
}
<div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
    <!--begin::Form-->
    <div class="d-flex flex-center flex-column flex-lg-row-fluid">
        <!--begin::Wrapper-->
        <div class="w-lg-500px p-10">

            <!--begin::Heading-->
            <div class="text-center mb-11">
                <!--begin::Title-->
                <h1 class="text-gray-900 fw-bolder mb-3">
                    Log In 
                </h1>
                <!--end::Title-->
                <!--begin::Subtitle-->
                <div class="text-gray-500 fw-semibold fs-6">
                    Your Social Campaigns
                </div>
                <!--end::Subtitle--->
            </div>
            <!--begin::Heading-->

            <!--begin::login options-->
            <div class="row g-3 mb-9">
                <!--begin::Col-->
                <div class="col-md-6">
                    <!--begin::Google link--->
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="display: inline;">
                        <input type="hidden" name="provider" value="Google" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                            <img alt="Logo" src="https://img.icons8.com/?size=100&id=17949&format=png&color=000000" class="h-15px me-3">
                            Sign in with Google
                        </button>
                    </form>
                    <!--end::Google link--->
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-6">
                    <!--begin::Facebook link--->
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="display: inline;">
                        <input type="hidden" name="provider" value="Facebook" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                            <img alt="Logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/Facebook_Logo_2023.png/1200px-Facebook_Logo_2023.png?20231011121526" class="h-15px me-3">
                            Sign in with Facebook
                        </button>
                    </form>
                    <!--end::Facebook link--->
                </div>
                <!--end::Col-->
            </div>
            <!--end::login options-->

            <!--begin::Separator-->
            <div class="separator separator-content my-14">
                <span class="w-125px text-gray-500 fw-semibold fs-7">Or with email</span>
            </div>
            <!--end::Separator-->

            <!--begin::Form-->
            <form asp-controller="Account" asp-action="Login" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="kt_sign_in_form" method="post">
               
                
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-shield-tick fs-2hx text-success me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <div class="d-flex flex-column">
                            <span>@TempData["Message"]</span>
                        </div>
                    </div>
                }
                
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-shield-cross fs-2hx text-danger me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <div class="d-flex flex-column">
                            <span>@TempData["Error"]</span>
                        </div>
                    </div>
                }
                
  
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-information-5 fs-2hx text-danger me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                        <div class="d-flex flex-column">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <span class="mb-1">@error.ErrorMessage</span>
                            }
                        </div>
                    </div>
                }
                

                @if (ViewBag.ShowResendLink == true)
                {
                    <div class="alert alert-info d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-information-5 fs-2hx text-info me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                        <div class="d-flex flex-column">
                            <span class="fw-bold mb-2">Email not confirmed yet?</span>
                            <div>
                                <span class="text-muted me-2">Haven't received the confirmation email?</span>
                                <form asp-action="ResendConfirmation" method="post" style="display: inline;">
                                    <input type="hidden" name="email" value="@ViewBag.Email" />
                                    <button type="submit" class="btn btn-link btn-sm p-0 text-info fw-bold text-decoration-underline">
                                        Click here to resend
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }

                <!--begin::Input group - Email-->
                <div class="fv-row mb-8 fv-plugins-icon-container">
                    <input asp-for="Email" type="email" placeholder="Email" name="email" autocomplete="email" class="form-control bg-transparent" value="@Model?.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Input group-->

                <!--begin::Input group - Password-->
                <div class="fv-row mb-3 fv-plugins-icon-container">
                    <input asp-for="Password" type="password" placeholder="Password" name="password" autocomplete="current-password" class="form-control bg-transparent">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Input group-->

                <!--begin::Wrapper-->
                <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                    <div></div>
                    <!--begin::Link-->
                    <a href="@Url.Action("ForgetPassword", "Account")" class="link-primary">
                        Forgot Password ?
                    </a>
                    <!--end::Link-->
                </div>
                <!--end::Wrapper-->

                <!--begin::Submit button-->
                <div class="d-grid mb-10">
                    <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
                        <!--begin::Indicator label-->
                        <span class="indicator-label">
                            Sign In
                        </span>
                        <!--end::Indicator label-->
                        <!--begin::Indicator progress-->
                        <span class="indicator-progress">
                            Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                        <!--end::Indicator progress-->
                    </button>
                </div>
                <!--end::Submit button-->

                <!--begin::Sign up-->
                <div class="text-gray-500 text-center fw-semibold fs-6">
                    Not a Member yet?
                    <a href="@Url.Action("SignUp", "Account")" class="link-primary">
                        Sign up
                    </a>
                </div>
                <!--end::Sign up-->

            </form>
            <!--end::Form-->
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Form-->
</div>

<!-- Add validation scripts at the bottom of your view -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/validation-styling.js"></script>

    <script>
        // Optional: Enhanced form submission with loading state
        document.getElementById('kt_sign_in_form').addEventListener('submit', function() {
            var submitButton = document.getElementById('kt_sign_in_submit');
            var indicatorLabel = submitButton.querySelector('.indicator-label');
            var indicatorProgress = submitButton.querySelector('.indicator-progress');
            
            // Show loading state
            submitButton.disabled = true;
            indicatorLabel.style.display = 'none';
            indicatorProgress.style.display = 'inline-flex';
        });
    </script>
}
