@using GameVault.BLL.ModelVM.Account
@model UserSignUp
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sign Up";
}
<div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
    <!--begin::Form-->
    <div class="d-flex flex-center flex-column flex-lg-row-fluid">
        <!--begin::Wrapper-->
        <div class="w-lg-500px p-10">

            <!--begin::Heading-->
            <div class="text-center mb-11">
                <!--begin::Title-->
                <h1 class="text-gray-900 fw-bolder mb-3">
                    Sign Up
                </h1>
                <!--end::Title-->
                <!--begin::Subtitle-->
                <div class="text-gray-500 fw-semibold fs-6">
                    Your Social Campaigns
                </div>
                <!--end::Subtitle--->
            </div>
            <!--begin::Heading-->
            <!--begin::login options-->
            <div class="row g-3 mb-9">
                <!--begin::Col-->
                <div class="col-md-6">
                    <!--begin::Google link--->
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="display: inline;">
                        <input type="hidden" name="provider" value="Google" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                            <img alt="Logo" src="https://img.icons8.com/?size=100&id=17949&format=png&color=000000" class="h-15px me-3">
                            Sign up with Google
                        </button>
                    </form>
                    <!--end::Google link--->
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-6">
                    <!--begin::Facebook link--->
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post" style="display: inline;">
                        <input type="hidden" name="provider" value="Facebook" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                            <img alt="Logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/Facebook_Logo_2023.png/1200px-Facebook_Logo_2023.png?20231011121526" class="h-15px me-3">
                            Sign up with Facebook
                        </button>
                    </form>
                    <!--end::Facebook link--->
                </div>
                <!--end::Col-->
            </div>
            <!--end::login options-->
            <!--begin::Separator-->
            <div class="separator separator-content my-14">
                <span class="w-125px text-gray-500 fw-semibold fs-7">Or with email</span>
            </div>
            <!--end::Separator-->
            <!--begin::Form-->
            <form asp-controller="Account" asp-action="SignUp" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="kt_sign_up_form" method="post">

                <!-- Success/Error Messages from TempData -->
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-shield-tick fs-2hx text-success me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <div class="d-flex flex-column">
                            <span>@TempData["Message"]</span>
                        </div>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-shield-cross fs-2hx text-danger me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <div class="d-flex flex-column">
                            <span>@TempData["Error"]</span>
                        </div>
                    </div>
                }

                <!-- Model Validation Summary -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center p-5 mb-10">
                        <i class="ki-duotone ki-information-5 fs-2hx text-danger me-4">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                        <div class="d-flex flex-column">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <span class="mb-1">@error.ErrorMessage</span>
                            }
                        </div>
                    </div>
                }

                <!--begin::Input group - Email-->
                <div class="fv-row mb-8 fv-plugins-icon-container">
                    <input asp-for="Email" type="email" placeholder="Email" name="email" autocomplete="email" class="form-control bg-transparent" value="@Model?.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Input group-->
                <!--begin::Input group - Username-->
                <div class="fv-row mb-8 fv-plugins-icon-container">
                    <input asp-for="Username" type="text" placeholder="Username" name="username" autocomplete="username" class="form-control bg-transparent" value="@Model?.Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Input group-->
                <!--begin::Input group - Password-->
                <div class="fv-row mb-8 fv-plugins-icon-container" data-kt-password-meter="true">
                    <!--begin::Wrapper-->
                    <div class="mb-1">
                        <!--begin::Input wrapper-->
                        <div class="position-relative mb-3">
                            <input asp-for="Password" class="form-control bg-transparent" type="password" placeholder="Password" name="password" autocomplete="new-password">
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                <i class="ki-duotone ki-eye-slash fs-2"></i>
                                <i class="ki-duotone ki-eye fs-2 d-none"></i>
                            </span>
                        </div>
                        <!--end::Input wrapper-->
                        <!--begin::Meter-->
                        <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                            <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                        </div>
                        <!--end::Meter-->
                    </div>
                    <!--end::Wrapper-->
                    <!--begin::Hint-->
                    <div class="text-muted">
                        Use 8 or more characters with a mix of letters, numbers &amp; symbols.
                    </div>
                    <!--end::Hint-->
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Input group-->
                <!--begin::Input group - Confirm Password-->
                <div class="fv-row mb-8 fv-plugins-icon-container">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" name="confirmPassword" autocomplete="new-password" class="form-control bg-transparent">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Input group-->
                <!--begin::Accept Terms-->
                <div class="fv-row mb-8 fv-plugins-icon-container">
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="toc" value="1">
                        <span class="form-check-label fw-semibold text-gray-700 fs-base ms-1">
                            I Accept the <a href="#" class="ms-1 link-primary">Terms</a>
                        </span>
                    </label>
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                </div>
                <!--end::Accept Terms-->
                <!--begin::Submit button-->
                <div class="d-grid mb-10">
                    <button type="submit" id="kt_sign_up_submit" class="btn btn-primary">
                        <!--begin::Indicator label-->
                        <span class="indicator-label">
                            Sign up
                        </span>
                        <!--end::Indicator label-->
                        <!--begin::Indicator progress-->
                        <span class="indicator-progress">
                            Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                        <!--end::Indicator progress-->
                    </button>
                </div>
                <!--end::Submit button-->
                <!--begin::Sign in link-->
                <div class="text-gray-500 text-center fw-semibold fs-6">
                    Already have an Account?
                    <a href="@Url.Action("Login", "Account")" class="link-primary fw-semibold">
                        Sign in
                    </a>
                </div>
                <!--end::Sign in link-->

            </form>
            <!--end::Form-->

        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Form-->
</div>

<!-- Add validation scripts at the bottom of your view -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Optional: Enhanced form submission with loading state
        document.getElementById('kt_sign_up_form').addEventListener('submit', function() {
            var submitButton = document.getElementById('kt_sign_up_submit');
            var indicatorLabel = submitButton.querySelector('.indicator-label');
            var indicatorProgress = submitButton.querySelector('.indicator-progress');

            // Show loading state
            submitButton.disabled = true;
            indicatorLabel.style.display = 'none';
            indicatorProgress.style.display = 'inline-flex';
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/validation-styling.js"></script>

}
>
