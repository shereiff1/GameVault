@{
    var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
    var profileImageUrl = !string.IsNullOrEmpty(currentUser?.ProfilePicture)
        ? Url.Content("~/Images/" + currentUser.ProfilePicture)
        : "https://i.ibb.co/bjgY27pk/Blank-Profile-Pic.jpg";
}

<div class="main-header">
    <div class="main-header-logo">
        <!-- Logo Header -->
        <div class="logo-header" data-background-color="dark">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/assets/img/kaiadmin/logo_light.svg" alt="navbar brand" class="navbar-brand" height="20">
            </a>
            <div class="nav-toggle">
                <button class="btn btn-toggle toggle-sidebar">
                    <i class="gg-menu-right"></i>
                </button>
                <button class="btn btn-toggle sidenav-toggler">
                    <i class="gg-menu-left"></i>
                </button>
            </div>
            <button class="topbar-toggler more">
                <i class="gg-more-vertical-alt"></i>
            </button>
        </div>
        <!-- End Logo Header -->
    </div>

    <!-- Navbar Header -->
    <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
        <div class="container-fluid">
            <!-- Desktop Search Form -->
            <nav class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
                <form asp-controller="User" asp-action="Search" method="get" class="d-flex w-100">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <button type="submit" class="btn btn-search pe-1">
                                <i class="fa fa-search search-icon"></i>
                            </button>
                        </div>
                        <input type="text"
                               name="searchTerm"
                               placeholder="Search users..."
                               class="form-control"
                               value="@ViewBag.SearchTerm"
                               autocomplete="off">
                    </div>
                </form>
            </nav>

            <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">
                <!-- Mobile Search Dropdown -->
                <li class="nav-item topbar-icon dropdown hidden-caret d-flex d-lg-none">
                    <a class="nav-link dropdown-toggle"
                       data-bs-toggle="dropdown"
                       href="#"
                       role="button"
                       aria-expanded="false"
                       aria-haspopup="true">
                        <i class="fa fa-search"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-search animated fadeIn">
                        <form asp-controller="User" asp-action="Search" method="get" class="navbar-left navbar-form nav-search">
                            <div class="input-group">
                                <input type="text"
                                       name="searchTerm"
                                       placeholder="Search users..."
                                       class="form-control"
                                       value="@ViewBag.SearchTerm"
                                       autocomplete="off">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-search">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </ul>
                </li>

                <!-- User Profile Dropdown -->
                <li class="nav-item topbar-user dropdown hidden-caret">
                    <a class="dropdown-toggle profile-pic"
                       data-bs-toggle="dropdown"
                       href="#"
                       role="button"
                       aria-expanded="false"
                       aria-haspopup="true"
                       id="profileDropdown">
                        <div class="avatar-sm">
                            <!-- Dynamic Profile Image - Small Avatar -->
                            <img src="@profileImageUrl"
                                 alt="Profile"
                                 class="avatar-img rounded-circle"
                                 style="width: 35px; height: 35px; object-fit: cover; pointer-events: none;"
                                 onerror="this.onerror=null; this.src='https://i.ibb.co/bjgY27pk/Blank-Profile-Pic.jpg';">
                        </div>
                        <span class="profile-username">
                            <span class="op-7">Hi,</span>
                            <span class="fw-bold">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    @User.Identity.Name
                                }
                                else
                                {
                                    <text>Guest</text>
                                }
                            </span>
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-user animated fadeIn" aria-labelledby="profileDropdown">
                        <div class="dropdown-user-scroll scrollbar-outer">
                        <li>
                            <div class="user-box">
                                <div class="avatar-lg">
                                    <!-- Dynamic Profile Image - Large Avatar -->
                                    <img src="@profileImageUrl"
                                         alt="image profile"
                                         class="avatar-img rounded"
                                         style="width: 80px; height: 80px; object-fit: cover;"
                                         onerror="this.onerror=null; this.src='https://i.ibb.co/bjgY27pk/Blank-Profile-Pic.jpg';">
                                </div>
                                <div class="u-text">
                                    <h4>
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            @User.Identity.Name
                                        }
                                        else
                                        {
                                            <text>Guest User</text>
                                        }
                                    </h4>
                                    <p class="text-muted">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            @currentUser?.Email
                                        }
                                        else
                                        {
                                            <text>Not signed in</text>
                                        }
                                    </p>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a href="@Url.Action("UserProfile", "User")" class="btn btn-xs btn-secondary btn-sm">View Profile</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Login", "Account")" class="btn btn-xs btn-primary btn-sm">Sign In</a>
                                    }
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="dropdown-divider"></div>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="dropdown-item" href="@Url.Action("UserProfile", "User")">
                                    <i class="fas fa-user"></i> My Profile
                                </a>
                          
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("UpdateProfile", "User")">
                                    <i class="fas fa-cog"></i> Account Settings
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                    <button type="submit" class="dropdown-item w-100 text-start">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a class="dropdown-item" href="@Url.Action("Login", "Account")">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                                <a class="dropdown-item" href="@Url.Action("Register", "Account")">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            }
                        </li>
        </div>
        </ul>
        </li>
        </ul>
</div>
    </nav>
<!-- End Navbar -->
</div>

<!-- Additional JavaScript for Search Enhancement    -->
<script>
    $(document).ready(function() {
        // Enhanced search functionality
        $('.nav-search input[name="searchTerm"]').on('keypress', function(e) {
            if (e.which === 13) { // Enter key
                $(this).closest('form').submit();
            }
        });

        // Auto-focus search input when mobile dropdown opens
        $('.dropdown-search').on('shown.bs.dropdown', function() {
            $(this).find('input[name="searchTerm"]').focus();
        });

        // Clear search on escape key
        $('.nav-search input[name="searchTerm"]').on('keyup', function(e) {
            if (e.which === 27) { // Escape key
                $(this).val('');
            }
        });

        // Initialize Bootstrap dropdowns explicitly
        var dropdownElementList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'))
        var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
            return new bootstrap.Dropdown(dropdownToggleEl)
        });

        // Fix for profile dropdown
        $('#profileDropdown').on('click', function(e) {
            e.preventDefault();
            var dropdown = new bootstrap.Dropdown(this);
            dropdown.toggle();
        });
    });
</script>