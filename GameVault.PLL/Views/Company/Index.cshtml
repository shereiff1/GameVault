@using GameVault.BLL.ModelVM
@model List<CompanyVM>

@{
    ViewData["Title"] = "Companies";
    var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
}

<h2>Company List</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@if (currentUser != null && UserManager.IsInRoleAsync(currentUser, "Admin").Result)
{
    <div class="mb-3">
        <a asp-action="Add" class="btn btn-primary">Add New Company</a>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No companies found.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Company Name</th>
                <th>Company Info</th>
                @if (currentUser != null && UserManager.IsInRoleAsync(currentUser, "Admin").Result)
                {
                    <th>Created By</th>
                    <th style="width: 180px;">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.CompanyName</td>
                    <td>@company.CompanyInfo</td>
                    @if (currentUser != null && UserManager.IsInRoleAsync(currentUser, "Admin").Result)
                    {
                        <td>@company.CreatedBy</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@company.CompanyId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@company.CompanyId"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this company?');">
                                Delete
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
