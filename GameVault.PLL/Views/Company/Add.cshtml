@model GameVault.BLL.ModelVM.CompanyVM

@{
    ViewData["Title"] = "Add Company";
    bool returnToGame = ViewBag.ReturnToGame ?? false;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header @(returnToGame ? "bg-success" : "bg-primary") text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-building me-2"></i>Add New Company
                    </h3>
                    @if (returnToGame)
                    {
                        <p class="mb-0 small">Create a company and return to add game</p>
                    }
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewBag.DebugErrors != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>Debug - Validation Errors:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (string error in ViewBag.DebugErrors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Add" method="post">
                        <input type="hidden" name="returnToGame" value="@returnToGame" />

                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label">
                                <i class="fas fa-building me-1"></i>Company Name
                            </label>
                            <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CompanyInfo" class="form-label">
                                <i class="fas fa-info-circle me-1"></i>Company Information
                            </label>
                            <textarea asp-for="CompanyInfo" class="form-control" rows="3" placeholder="Enter company information (optional)"></textarea>
                            <span asp-validation-for="CompanyInfo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreatedBy" class="form-label">
                                <i class="fas fa-user me-1"></i>Created By
                            </label>
                            <input asp-for="CreatedBy" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            @if (returnToGame)
                            {
                                <a asp-controller="Game" asp-action="Add" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to Add Game
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i>Create & Return
                                </button>
                            }
                            else
                            {
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to Companies
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Add Company
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
