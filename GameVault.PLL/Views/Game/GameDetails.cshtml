@model GameVault.BLL.ModelVM.Game.GameDetails

@{
    ViewData["Title"] = Model?.Title ?? "Game Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <div class="text-center py-5">
            <i class="fas fa-gamepad text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">Game Not Found</h3>
            <p class="text-muted">The game you're looking for doesn't exist or has been removed.</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Back to Games
            </a>
        </div>
    }
    else if (Model != null)
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Games</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Game Image and Basic Info -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="~/Files/@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 300px;">
                                <i class="fas fa-gamepad text-muted" style="font-size: 4rem;"></i>
                            </div>
                        }

                        <h2 class="card-title text-primary mb-3">@Model.Title</h2>

                        <!-- Rating Display -->
                        <div class="mb-3">
                            @if (Model.Rating > 0)
                            {
                                <div class="d-flex justify-content-center align-items-center mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(Model.Rating))
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else if (i <= Model.Rating)
                                        {
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-warning"></i>
                                        }
                                    }
                                    <span class="ms-2 text-muted">(@Model.Rating.ToString("0.0"))</span>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted"><i class="fas fa-star-o"></i> No ratings yet</p>
                            }
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <span class="badge bg-success fs-5 px-3 py-2">
                                <i class="fas fa-tag me-2"></i>$@Model.Price.ToString("0.00")
                            </span>
                        </div>

                        <!-- Company -->
                        <p class="text-muted">
                            <i class="fas fa-building me-2"></i>
                            <strong>Published by:</strong> @Model.CompanyName
                        </p>
                    </div>
                </div>
            </div>

            <!-- Game Details and Description -->
            <div class="col-lg-8 col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Game Description</h4>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="card-text">@Model.Description</p>
                        }
                        else
                        {
                            <p class="text-muted"><em>No description available for this game.</em></p>
                        }

                        <!-- Categories -->
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            <div class="mt-4">
                                <h5><i class="fas fa-tags me-2"></i>Categories</h5>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <span class="badge bg-info text-dark" title="@category.Description">
                                            @category.Category_Name
                                        </span>
                                    }
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-comments me-2"></i>Player Reviews</h4>
                        <span class="badge bg-light text-dark">@(Model.Reviews?.Count ?? 0) Reviews</span>
                    </div>
                    <div class="card-body">
                        @if (Model.Reviews != null && Model.Reviews.Any())
                        {
                            <div class="row">
                                @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedOn))
                                {
                                    <div class="col-lg-6 col-md-12 mb-3">
                                        <div class="border rounded p-3 h-100">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <strong class="text-primary">Player #@review.Player_Id</strong>
                                                    <small class="text-muted d-block">@review.CreatedOn.ToString("MMM dd, yyyy")</small>
                                                </div>
                                                <div class="d-flex">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating)
                                                        {
                                                            <i class="fas fa-star text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-warning"></i>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(review.Comment))
                                            {
                                                <p class="mb-0">@review.Comment</p>
                                            }
                                            else
                                            {
                                                <p class="mb-0 text-muted"><em>No comment provided</em></p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-comment-slash text-muted" style="font-size: 3rem;"></i>
                                <h5 class="mt-3 text-muted">No Reviews Yet</h5>
                                <p class="text-muted">Be the first to review this game!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (Model != null)
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>"@Model.Title"</strong>?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <a href="@Url.Action("Delete", new { id = Model.GameId })" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Game
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}