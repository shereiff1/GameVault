@model GameVault.BLL.ModelVM.GameVM
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Add Game";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-gamepad me-2"></i>Add New Game
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-heading me-1"></i>Game Title
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter game title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-file-text me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter game description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label asp-for="CompanyId" class="form-label mb-0">
                                    <i class="fas fa-building me-1"></i>Company
                                </label>
                                <a asp-action="CreateCompany" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-plus me-1"></i>Create New Company
                                </a>
                            </div>
                            <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-select">
                                <option value="">-- Select a Company --</option>
                            </select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="form-label mb-0">
                                    <i class="fas fa-tags me-1"></i>Categories
                                </label>
                                <button type="button" class="btn btn-outline-success btn-sm" onclick="toggleNewCategoryForm()">
                                    <i class="fas fa-plus me-1"></i>Create New Category
                                </button>
                            </div>

                            <div class="row">
                                @foreach (var cat in (IEnumerable<SelectListItem>)ViewBag.Categories)
                                {
                                    var id = cat.Value;
                                    var text = cat.Text;
                                    var isChecked = Model.SelectedCategoryIds != null && Model.SelectedCategoryIds.Contains(int.Parse(id));
                                    <div class="col-6 col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="SelectedCategoryIds"
                                                   value="@id"
                                                   id="cat_@id"
                                                   @(isChecked ? "checked" : "") />
                                            <label class="form-check-label" for="cat_@id">@text</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div id="newCategoryForm" class="mt-3" style="display: none;">
                            <div class="card border-success">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0 text-success">
                                        <i class="fas fa-plus-circle me-1"></i>Add New Category
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="NewCategoryName" class="form-label">Category Name</label>
                                            <input asp-for="NewCategoryName" class="form-control" placeholder="Enter category name" />
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="NewCategoryDescription" class="form-label">Description (Optional)</label>
                                            <input asp-for="NewCategoryDescription" class="form-control" placeholder="Enter category description" />
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <button type="button" class="btn btn-sm btn-secondary" onclick="toggleNewCategoryForm()">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>Price
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreatedBy" class="form-label">
                                <i class="fas fa-user me-1"></i>Created By
                            </label>
                            <input asp-for="CreatedBy" class="form-control" placeholder="Enter creator name" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="formFile" class="form-label">
                                <i class="fas fa-image me-1"></i>Game Image
                            </label>
                            <input asp-for="formFile" class="form-control" type="file" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Games
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Add Game
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleNewCategoryForm() {
        const form = document.getElementById('newCategoryForm');
        const isVisible = form.style.display !== 'none';

        if (isVisible) {
            form.style.display = 'none';
            const nameInput = document.querySelector('input[name="NewCategoryName"]');
            const descInput = document.querySelector('input[name="NewCategoryDescription"]');
            if (nameInput) nameInput.value = '';
            if (descInput) descInput.value = '';
        } else {
            form.style.display = 'block';
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
