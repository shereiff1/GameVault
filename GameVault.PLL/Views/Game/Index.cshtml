@model List<GameVault.BLL.ModelVM.GameVM>

@{
    ViewData["Title"] = "Games";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-gamepad me-2"></i>Games Management</h2>
        <a asp-action="Add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add New Game
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">Games List (@Model.Count)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                <th><i class="fas fa-heading me-1"></i>Title</th>
                                <th><i class="fas fa-file-text me-1"></i>Description</th>
                                <th><i class="fas fa-building me-1"></i>Company</th>
                                <th><i class="fas fa-user me-1"></i>Created By</th>
                                <th><i class="fas fa-cogs me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var game in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#@game.GameId</span>
                                    </td>
                                    <td>
                                        <strong>@game.Title</strong>
                                    </td>
                                    <td>
                                        <span class="text-muted">
                                            @(game.Description.Length > 50 ? game.Description.Substring(0, 50) + "..." : game.Description)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">Company ID: @game.CompanyId</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@game.CreatedBy</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@game.GameId"
                                               class="btn btn-warning btn-sm"
                                               title="Edit Game">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@game.GameId"
                                               class="btn btn-danger btn-sm"
                                               title="Delete Game"
                                               onclick="return confirm('Are you sure you want to delete this game?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-gamepad fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted">No games found</h4>
            <p class="text-muted">Start by adding your first game to the system.</p>
            <a asp-action="Add" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Add First Game
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('[onclick*="confirm"]');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this game? This action cannot be undone.')) {
                        e.preventDefault();
                        return false;
                    }
                });
            });
        });
    </script>
}
