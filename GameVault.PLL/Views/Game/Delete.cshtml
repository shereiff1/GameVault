@model GameVault.BLL.ModelVM.GameVM

@{
    ViewData["Title"] = "Delete Game";
}

<h2>Delete Game</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this game?</h4>
</div>

<div class="mb-3"><strong>Title:</strong> @Model.Title</div>
<div class="mb-3"><strong>Created By:</strong> @Model.CreatedBy</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="GameId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
